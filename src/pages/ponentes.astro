<style lang="scss">
  .member-card {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s, color 0.3s;
  }

  .member-image {
    width: 150px; 
    height: 150px; 
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto; 
  }

  .member-card h2 {
    color: #7604b7;
  }

  .member-card p {
    color: #333;
  }

  .member-card:hover {
    background-color: #6a11cb;
    color: white;
  }

  .member-card:hover h2,
  .member-card:hover p {
