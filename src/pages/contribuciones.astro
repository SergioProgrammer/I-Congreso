---
import DefaultLayout from '../layouts/DefaultLayout.astro';
---

<DefaultLayout title="Contribuciones">
  <section class="contribution-section">
    <div class="container">
      <h1 class="text-6xl text-center mb-16">Envío de Proyectos</h1>
      <form class="contribution-form" action="http://localhost:3000/submit" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Nombre y Apellidos</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="email">Correo Electrónico</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
            <label for="comments">Comentarios (máximo 200 palabras)</label>
            <textarea id="comments" name="comments" rows="4" maxlength="200" required></textarea>
          </div>
        <div class="form-group">
          <label for="document">Cargar Documento (PDF)</label>
          <input type="file" id="document" name="document" accept="application/pdf" required />
        </div>
        <button type="submit" class="submit-button">Enviar Proyecto</button>
      </form>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  .contribution-section {
    padding: 60px 20px;
    text-align: center;
  }

  .container {
    max-width: 800px;
    margin: auto;
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .contribution-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .form-group label {
    font-size: 1.2rem;
    margin-bottom: 5px;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .submit-button {
    background: #6a11cb;
    color: white;
    border: none;
    padding: 15px 30px;
    font-size: 1.2rem;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .submit-button:hover {
    background: #7300a9;
  }
</style>