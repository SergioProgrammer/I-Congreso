---
import DefaultLayout from '/src/layouts/DefaultLayout.astro'
import aulario from '/src/assets/img/aulario.jpg'
import aularioull from '/src/assets/img/aularioull.jpg'
---

<DefaultLayout title="Comités">
  <section class="my-24">
    <div class="container">
      <h2 class="text-6xl text-center mb-6">Miembros del Evento</h2>
      <p class="text-2xl text-center mb-7 mt-1" id="members-text">
        Conoce a los miembros de los diferentes comités que forman parte del Congreso 
      </p>
      <div class="accordion">
        <div class="accordion-item">
          <input type="checkbox" id="comision-mixta" class="accordion-toggle">
          <label for="comision-mixta" class="accordion-label">Comisión Mixta</label>
          <div class="accordion-content">
            <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
              <div class="member-card">
                <img src={aulario.src} alt="Dra. Olga María Alegre de la Rosa" class="member-image" />
                <h2 class="text-2xl mt-4">Dra. Olga María Alegre de la Rosa</h2>
                <p class="text-lg mt-2">Universidad de La Laguna (ULL).</p>
              </div>
              <div class="member-card">
                <img src={aulario.src} alt="Dña. Helena Arroyo Moratilla" class="member-image" />
                <h2 class="text-2xl mt-4">Dña. Helena Arroyo Moratilla</h2>
                <p class="text-lg mt-2">Universidad Complutense de Madrid (UCM).</p>
              </div>
              <!-- Añade más miembros aquí -->
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <input type="checkbox" id="consejo-asesor" class="accordion-toggle">
          <label for="consejo-asesor" class="accordion-label">Consejo Asesor</label>
          <div class="accordion-content">
            <div class="accordion">
              {[
                "Comisión de Audiología",
                "Comisión de Derecho",
                "Comisión de Educación",
                "Comisión de Enfermería",
                "Comisión de Implantes Cocleares",
                "Comisión de Lengua de Signos",
                "Comisión de Logopedia",
                "Comisión ONCE",
                "Comisión de Pediatría",
                "Comisión de Psicología",
                "Comisión de Psiquiatría",
                "Comisión de Sordoceguera",
                "Comisión de Psicomotricidad",
                "Comisión de Voz",
                "Comisión FIAPAS",
                "Comisión de Fisioterapia"
              ].map((comision, i) => (
                <div class="accordion-item">
                  <input type="checkbox" id={`comision-${i + 1}`} class="accordion-toggle">
                  <label for={`comision-${i + 1}`} class="accordion-label">{comision}</label>
                  <div class="accordion-content">
                    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
                      <div class="member-card">
                        <img src={aulario.src} alt="Dr. José Juan Barajas de Prat" class="member-image" />
                        <h2 class="text-2xl mt-4">Dr. José Juan Barajas de Prat</h2>
                        <p class="text-lg mt-2">Presidente de la Fundación Canaria Doctor Barajas para la Prevención e Investigación de la Sordera.</p>
                      </div>
                      <div class="member-card">
                        <img src={aulario.src} alt="Dra. Susana Bena Villaseño" class="member-image" />
                        <h2 class="text-2xl mt-4">Dra. Susana Bena Villaseño</h2>
                        <p class="text-lg mt-2">Universidad Rey Juan Carlos (URJC).</p>
                      </div>
                      <!-- Añade más miembros aquí -->
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <input type="checkbox" id="consejo-direccion" class="accordion-toggle">
          <label for="consejo-direccion" class="accordion-label">Consejo Dirección</label>
          <div class="accordion-content">
            <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
              <div class="member-card">
                <img src={aulario.src} alt="Dra. Chantal Biencinto López" class="member-image" />
                <h2 class="text-2xl mt-4">Dra. Chantal Biencinto López</h2>
                <p class="text-lg mt-2">Universidad Complutense de Madrid (UCM).</p>
              </div>
              <div class="member-card">
                <img src={aulario.src} alt="Dra. Silvia Andrea Borkoski Barreiro" class="member-image" />
                <h2 class="text-2xl mt-4">Dra. Silvia Andrea Borkoski Barreiro</h2>
                <p class="text-lg mt-2">Unidad de Hipoacusia del Hospital Universitario Insular Materno Infantil (CHUIMI), Las Palmas de Gran Canaria.</p>
              </div>
              <!-- Añade más miembros aquí -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  .accordion {
    border: 1px solid #ddd;
    border-radius: 5px;
    overflow: hidden;
  }

  .accordion-item {
    border-bottom: 1px solid #ddd;
    transition: background-color 0.3s, color 0.3s;
  }

  .accordion-item:last-child {
    border-bottom: none;
  }

  .accordion-toggle {
    display: none;
  }

  .accordion-label {
    display: block;
    padding: 15px;
    background: #f7f7f7;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s, color 0.3s;
  }

  .accordion-content {
    display: none;
    padding: 15px;
    background: #fff;
  }

  .accordion-toggle:checked + .accordion-label + .accordion-content {
    display: block;
  }

  .accordion-item:hover .accordion-label {
    background-color: #6a11cb;
    color: white;
  }

  .accordion-item .accordion-label:hover {
    background-color: #6a11cb;
    color: white;
  }

  .member-card {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s, color 0.3s;
  }

  .member-card:hover {
    background-color: #6a11cb;
    color: white;
  }

  .member-image {
    width: 150px; 
    height: 150px; 
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto; 
  }

  .member-card h2 {
    color: #7604b7;
  }

  .member-card p {
    color: #333;
  }

  .member-card:hover h2,
  .member-card:hover p {
    color: white;
  }
</style>